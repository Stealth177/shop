= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label 'Название:'
    = f.text_field :title
  .field
    = f.label 'Описание:'
    = f.cktext_area :description, :class => "someclass", :ckeditor => {:language => "ru"}
  .field
    = f.label 'Фото:'
    = f.file_field :photo
  .field
    = f.label  'Цена:'
    = f.text_field :price
  .field
    = f.label 'Категория товара:'
    = f.select "id_category", ProductCategory.all.collect {|j| [ j.name, j.id ] }, { :include_blank => true }  
  .actions
    = f.submit 'Save'
