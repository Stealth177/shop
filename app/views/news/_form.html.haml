= form_for @news do |f|
  - if @news.errors.any?
    #error_explanation
      %h2= "#{pluralize(@news.errors.count, "error")} prohibited this news from being saved:"
      %ul
        - @news.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label 'Название:'
    = f.text_field :title
  .field
    = f.cktext_area :content, :class => "someclass", :ckeditor => {:language => "ru"}
  .actions
    = f.submit 'Сохранить'
