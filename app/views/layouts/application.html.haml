!!!
%html
  %head
    %title Компьютерный магазин
    = stylesheet_link_tag    "application", :media => "all" 
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %table{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "920"}
      %tr
        %td{:height => "25"}  
      %tr
        %td.header{:height => "77"}
          %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
            %tr
              %td{:align => "left", :width => "28%"}
                %img{:alt => "", :border => "0", :height => "77", :src => "/assets/logo.jpg", :width => "262"}/
              %td{:align => "right", :width => "72%"}
                - if user_signed_in?
                  
                  %br
                  = link_to "Выход", destroy_user_session_path, :method => :delete
                - else
                  %br
                  = link_to 'Войти', new_user_session_path  
                  %br
                  = link_to 'Регистрация', new_user_registration_path

      %tr
        %td.menu{:height => "38"}
          .menuLs
            %ul
              %li
                = link_to 'Главная', store_path
              %li
                = link_to 'Каталог', products_path
              %li
                %a{:href => "#"} О компании
              %li
                %a{:href => "#"} Прайс-лист
              %li
                %a{:href => "#"} Контакты
              %li
                %a{:href => "#"} Новости
              %li
                %a{:href => "#"} Обзоры

      %tr
        %td{:height => "20"}  
      %tr
        %td
          %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "920"}
            %tr{:align => "left", :valign => "top"}
              %td{:height => "479", :width => "192"}
                %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "192"}
                  %tr
                    %td.topMenu.LeftMenuHeader{:height => "38"} Категории
                %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
                  %tr
                    %td{:height => "216", :valign => "top"}
                      .RightMenu
                        %ul
                          -@product_categories = ProductCategory.all
                          -@product_categories.each do |product|
                            %li
                              = link_to product.name, controller:"/store", action:"show_filter", id: product.id
                          #cart
                          -if @cart
                            - hidden_div_if(@cart.line_items.empty?, id: 'cart') do
                              = render @cart  
                
              %td{:width => "727"}
                %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
                  %tr
                    %td.topMenu.LeftMenuHeader{:height => "38"}
                      Товары
                      %a{:href => "#"}
                        %img{:alt => "", :border => "0", :height => "10", :src => "/assets/spacer.gif", :width => "10"}/
                = yield
      %tr
        %td{:height => "20"}  
      %tr
        %td{:align => "center"}
          %img{:alt => "", :border => "0", :height => "4", :src => "/assets/footer.gif", :width => "920"}/
      %tr
        %td{:align => "center", :height => "60"}
          Shop on RoR © copyright 2013 